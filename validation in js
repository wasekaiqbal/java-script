<body>
    <form name="mname" onsubmit="validateForm()"> 
    Name: <input type="text" name="fname">
    <input type="submit" value="submit"> 
</form>
<script>
    function validateForm() {
        var x = document.forms["mname"]["fname"].value
        if (x == "") {
            alert("Name must be given")
        return false;
        }
    }
</script>
</body>
